	검색목록 불러오기
	<select id="getSearchResult" parameterType="Map"
		resultMap="boardList">
   <![CDATA[
	  SELECT * FROM (
	  SELECT ROWNUM AS RECNUM, LVL, QNA_SEQ, QNA_REFER, 
	  QNA_TITLE, QNA_READCOUNT, QNA_CONTENT, MEM_ID, QNA_REGDATE, QNA_ISDEL
